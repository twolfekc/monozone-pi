[Unit]
Description=MonoZone Pi Controller
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/monozone-pi
EnvironmentFile=/home/pi/monozone-pi/.env
ExecStart=/home/pi/monozone-pi/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8080
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
